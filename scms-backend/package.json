{
  "name": "scms-backend",
  "version": "1.0.0",
  "description": "Smart Campus Management System - Complete Backend with Advanced Features",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:phase3": "node scripts/testPhase3.js",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier --write .",
    "seed": "node scripts/seed.js",
    "migrate": "node scripts/migrate.js",
    "backup": "node scripts/backup.js",
    "docs": "swagger-jsdoc -d swaggerDef.js -o docs/swagger.json routes/*.js",
    "docker:build": "docker build -t scms-backend .",
    "docker:run": "docker-compose up -d",
    "queue:monitor": "node scripts/queueMonitor.js",
    "analytics:generate": "node scripts/generateAnalytics.js"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.5.0",
    "dotenv": "^16.3.1",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "morgan": "^1.10.0",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "joi": "^17.9.2",
    "multer": "^1.4.5-lts.1",
    "aws-sdk": "^2.1451.0",
    "nodemailer": "^6.9.4",
    "redis": "^4.6.8",
    "socket.io": "^4.7.2",
    "express-rate-limit": "^6.9.0",
    "express-validator": "^7.0.1",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "express-session": "^1.17.3",
    "winston": "^3.10.0",
    "bull": "^4.11.3",
    "node-cron": "^3.0.2",
    "moment": "^2.29.4",
    "uuid": "^9.0.0",
    "sharp": "^0.32.4",
    "pdf-parse": "^1.1.1",
    "xlsx": "^0.18.5",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "agenda": "^5.0.0",
    "nodemon": "^3.0.1"
  },
  "devDependencies": {
    "jest": "^29.6.2",
    "supertest": "^6.3.3",
    "eslint": "^8.47.0",
    "prettier": "^3.0.2",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "@types/jest": "^29.5.4"
  },
  "keywords": [
    "education",
    "management",
    "nodejs",
    "express",
    "mongodb",
    "api",
    "socket.io",
    "real-time",
    "analytics",
    "file-upload",
    "background-jobs"
  ],
  "author": "SCMS Development Team",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
